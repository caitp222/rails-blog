<h1>Hello, Rails!</h1>
<%= link_to 'My Blog', controller: 'posts' %>
<%= link_to 'New Post', new_post_path %>

<h1>Listing Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
    </tr>
  <% end %>
</table>